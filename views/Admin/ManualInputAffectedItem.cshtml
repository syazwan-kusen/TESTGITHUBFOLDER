
<div class="panel-body col-md-10" id="hover1">
    @*<div class="panel-body  col-md-12">*@
    <label for="inputAddress">Affected Item/Asset</label>
    <div align="left">
        <table class="table table-bordered table-striped display" border="1" id="AffectedItem" align="center" width="100%" style="height:150px;border-color:aliceblue;">
            <thead style="background-color:moccasin">
                <tr>
                    <th width="2%"></th>
                    <th width="3%" class="text-center">No.</th>
                    <th class="text-center">Page</th>
                    <th class="text-center">Parameter</th>

                </tr>
            </thead>
            <tbody>

                @{
                    var count = 0;
                    foreach (var item in Model.VulManInputAffItem)

                    {
                        count = count + 1;
                        <tr>
                            <td align="center">
                                <input type="checkbox" name="chkdeleteFindingListAffectedItem" value="@item.VulManInptAffItemLstId" />
                            </td>
                            <td style="text-align:center">
                            @count
                            </td>
                           
                            <td>@Html.Raw(item.PageNm)</td>
                            <td>@Html.Raw(item.Parameter)</td>
                        </tr>
                    }
                }
            </tbody>
            @*<tbody style="text-align:left"></tbody>*@
        </table>
    </div>

    <div align="center">
        <button class="btn btn-primary btn-xs" onclick="AddFindingListAffectedItem(); return false;">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
        </button>

        <button type="button" id="deleteFindingListAffectedItem" class="btn btn-danger btn-xs delete">
            <span class="glyphicon glyphicon-trash"></span> Delete
        </button>
    </div>
    @*</div>*@
</div>

<script>
    function AddFindingListAffectedItem() {

        $('#FindingListAffectedItem').modal('show');

    }
</script>

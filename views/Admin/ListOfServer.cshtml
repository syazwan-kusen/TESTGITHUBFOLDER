
    <div class="panel-body col-md-6" id="hover1">
        @*<div class="panel-body  col-md-12">*@
        <label for="inputAddress"><u>List Of Server</u></label>
        <div align="left">
            <table class="table table-bordered table-striped display"  id="verifyUser" border="1" align="center" width="100%" style="height:150px;border-color:aliceblue;">
                <thead style="background-color:moccasin">
                    <tr>
                        <th width="2%"></th>
                        <th width="3%" class="text-center">No.</th>
                        <th class="text-center">Hostname</th>
                        <th class="text-center">IP Address</th>
                        <th class="text-center">OS</th>

                    </tr>
                </thead>
                <tbody>

                    @{
                        var count = 0;
                        foreach (var item in Model.VulProjServerLst)

                        {
                            count = count + 1;
                            <tr>
                                <td align="center">
                                    <input type="checkbox" name="chkdeletelistofserver" value="@item.VulProjServerLstId" />
                                </td>
                                <td style="text-align:center">@count</td>
                                <td>@Html.Raw(item.Hostname)</td>
                                <td>@Html.Raw(item.IPAddr)</td>
                                <td>@Html.Raw(item.OS)</td>
                                @*<td>@item.VulProjScopeId</td>*@

                            </tr>
                        }
                    }
                </tbody>
                @*<tbody style="text-align:left"></tbody>*@
            </table>
        </div>

        <div align="center">
            <button class="btn btn-primary btn-xs" onclick="Addlistofserver(); return false;">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
            </button>

            <button type="button" id="deletelistofserver" class="btn btn-danger btn-xs delete" data-bind="click:Deletelistofserver">
                <span class="glyphicon glyphicon-trash"></span> Delete
            </button>
        </div>
        @*</div>*@
    </div>



<script>
    function Addlistofserver() {

        $('#listofserver').modal('show');

    }
</script>


<div class="panel-body col-md-6" id="hover3">
    @*<div class="panel-body  col-md-12">*@
    <label for="inputAddress"><u>List Of Web Application</u></label>
    <div align="left">
        <table class="table table-bordered table-striped display" border="1" id="verifyUser2" align="center" width="100%" style="height:150px;border-color:aliceblue;">
            <thead style="background-color:moccasin">
                <tr>
                    <th width="2%"></th>
                    <th width="3%" class="text-center">No.</th>
                    <th class="text-center">Application Name</th>
                    <th class="text-center">Application URL</th>

                </tr>
            </thead>
            <tbody>

                @{
                    var count = 0;
                    foreach (var item in Model.VulProjWebApp)

                    {
                        count = count + 1;
                        <tr>
                            <td align="center">
                                <input type="checkbox" name="chkListOfWebApplication" value="@item.VulProjWebAppLstId" />
                            </td>
                            <td style="text-align:center">@count</td>
                            <td>@Html.Raw(item.AppNm)</td>
                            <td>@Html.Raw(item.AppURL)</td>

                        </tr>
                    }
                }
            </tbody>
            @*<tbody style="text-align:left"></tbody>*@
        </table>
    </div>

    <div align="center">
        <button class="btn btn-primary btn-xs"  onclick="AddListOfWebApplication(); return false;">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
        </button>

        <button type="button" id="deleteListOfWebApplication" class="btn btn-danger btn-xs delete" data-bind="click:DeleteListOfWebApplication">
            <span class="glyphicon glyphicon-trash"></span> Delete
        </button>
    </div>
    @*</div>*@
</div>

<script>
    function AddListOfWebApplication() {

        $('#ListOfWebApplication').modal('show');

    }
</script>

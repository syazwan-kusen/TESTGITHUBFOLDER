@using MVCEncrypt;

<div class="panel panel-info" style="margin-bottom: 0px; ">
    <div class="panel-body">
        <table class="table table-bordered table-striped display" id="pageListNA" align="center">
            <thead style="background-color:moccasin; display:none">
                <tr>
                    <th>REVIEW BUG RESEARCH PROJECT</th>
                    <th>REVIEW BUG RESEARCH PROJECT</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var count = 0;
                    foreach (var item in Model.ReviewNotApprove)

                    {
                        count = count + 1;
                        <tr>
                            <td class="col-sm-1 text-center">
                                <div class="col-sm-12">
                                    @*@if (File.Exists(Server.MapPath(@item.x.CrossPath)))*@
                                    @if (@item.x.CompPath != null && @item.x.CompPath != "")
                                    {
                                        @*<div><i class="fas fa-user fa-3x"></i></div>*@
                                        <img id="previewImg" src="@item.x.CompPath" style="border-radius:50%;height:36px">
                                    }

                                    else
                                    {
                                        <img id="previewImg" src="~/images/user_bug.png" style="height:36px">
                                    }
                                </div>
                                @if (item.VisibilityInd == true)
                                {
                                    <div class="col-sm-12">
                                        @item.Participant
                                    </div>
                                }
                                else if (item.VisibilityInd == false)
                                {
                                    <div class="col-sm-12">
                                        Public
                                    </div>
                                }

                            </td>
                            <td class="col-sm-10">
                                <div class="col-sm-12">
                                    <a id="not_approve" href="@Url.ActionEnc("mySecret", "EditReviewBugResearchProject", new { a = @item.BugResearchProjId })"><font color="blue">@item.ProjTitle</font></a>
                                </div>
                                <div class="col-sm-10">
                                    By: @item.x.CompFullNm
                                </div>
                                <div class="col-sm-2">
                                    Disclosed Date: @item.DisclosedDt
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
                        <textarea id="project_nm" type="text" maxlength="100" class="validate[required] form-control textarearesize" name="project_nm" placeholder="e.g. Project Name" autofocus rows="1" data-bind="html:Vulnerability.VulProj.VulProjectName, valueUpdate:'afterkeydown'" onkeypress="return runScript(event)"></textarea>
                     </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label class="required" for="inputAddress">Customer Name</label>
                        <textarea id="customer_nm" type="text" maxlength="100" class="validate[required] form-control textarearesize" name="customer_nm" placeholder="e.g. Customer Name" autofocus rows="1" data-bind="html:Vulnerability.VulProjClient.VulProjClientName, valueUpdate:'afterkeydown'" onkeypress="return runScript(event)"></textarea>
                    </div>
                </div>               
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label class="required" for="inputAddress">Organization/Team</label>
                        <textarea id="organization_nm" type="text"  maxlength="100" class="validate[required] form-control textarearesize" name="organization_nm" placeholder="e.g. Majlis Bandaraya Shah Alam" autofocus rows="1" data-bind="html:Vulnerability.VulProjClient.Organization, valueUpdate:'afterkeydown'" onkeypress="return runScript(event)"></textarea>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="required" for="inputAddress">Contact Person</label>
                        <textarea id="contact_person" type="text"  maxlength="50" class="validate[required] form-control textarearesize" name="contact_person" placeholder="e.g. Contact Person" autofocus rows="1" data-bind="html:Vulnerability.VulProjClient.ContactPerson, valueUpdate:'afterkeydown'" onkeypress="return runScript(event)"></textarea>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="required" for="agency_abbrv">Designation</label>
                        <textarea id="designation" type="text" maxlength="50" class="validate[required] form-control textarearesize" name="designation" placeholder="e.g. Project Manager" autofocus rows="1" data-bind="html:Vulnerability.VulProjClient.Designation, valueUpdate:'afterkeydown'" onkeypress="return runScript(event)"></textarea>
                     </div>
                </div>  
                <div class="form-row">
                    @*<div class="form-group col-md-6">
                        <label for="tel_no">Phone Number</label>
                        <input id="tel_no" type="text" class="form-control" name="tel_no" maxlength="50"  placeholder="e.g. 0174567899" autofocus data-bind="value:Vulnerability.VulProjClient.PhoneNo, valueUpdate:'afterkeydown'" autocomplete="off" onkeypress="return isNumber(event)">
                    </div>*@
                    @*<div class="col-md-2">
                        <label for="tel_no">Phone Number</label>
                        <select class="form-control" id="country">
                            <option>+60</option>
                            <option>+65</option> 

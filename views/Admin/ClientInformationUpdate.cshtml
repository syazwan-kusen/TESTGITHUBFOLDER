                        </select>
                    </div>*@
                    <div class="col-md-6" >
                        <label for="tel_no">Phone Number</label>
                        <input id="tel_no" type="text" class="form-control"  name="tel_no" maxlength="50" placeholder="e.g. 1234567890" autofocus data-bind="value:Vulnerability.VulProjClient.PhoneNo, valueUpdate:'afterkeydown'" autocomplete="off" onkeypress="return isNumber(event)">

@* title *@
<script language="JavaScript">

    var space = " ";
    var speed = "200";
    var pos = 0;
    var msg = "@ViewBag.Title";

    function Scroll()
    {
        document.title = msg.substring(pos, msg.length) + space + msg.substring(0,pos);
        pos++;

        if (pos > msg.length) pos = 0;
            window.setTimeout("Scroll()", speed);
    }
    Scroll();

    $("#contact").click(function () {
        $("#myCarousel").slideUp(1000);
        $("#myCarousel_2").slideDown(1000);
        $("#myCarousel_1").slideUp(1000);
        $("#faq").removeClass("FAQ_active_pills");
        $("#product").removeClass("product_active_pills");
        $("#contact").addClass("contact_active_pills");
    });

    $("#product").click(function () {
        $("#myCarousel").slideUp(1000);
        $("#myCarousel_2").slideUp(1000);
        $("#myCarousel_1").slideDown(1000);
        $("#product").removeClass("product");
        $("#product").addClass("product product_active_pills");
        $("#faq").removeClass("FAQ_active_pills");
        $("#contact").removeClass("contact_active_pills");
    });

    $("#faq").click(function () {
        $("#myCarousel_2").slideUp(1000);
        $("#myCarousel_1").slideUp(1000);
        $("#myCarousel").slideDown(1000);
        $("#product").removeClass("product_active_pills");
        $("#contact").removeClass("contact_active_pills");
        $("#faq").removeClass("faq");
        $("#faq").addClass("faq FAQ_active_pills");
    });

    $(function () {
        $("#product").removeClass("product");
        $("#product").addClass("product product_active_pills");

        var year = (new Date()).getFullYear();

        $('#year').html(year);
    });


    function myFunction() {
        //alert("Page is loaded");
    }

</script>